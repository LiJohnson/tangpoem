<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

	<TextView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="Title"
		android:id="@+id/title"
		android:gravity="center"
		android:layout_alignParentTop="true"
		android:textSize="35dp" android:layout_alignParentRight="true"
		android:layout_alignParentLeft="true"/>

	<TextView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="Author"
		android:id="@+id/author"
		android:layout_below="@+id/title"
		android:width="50sp"
		android:gravity="right" android:layout_alignParentRight="true"/>

	<ListView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:id="@+id/content"
		android:layout_below="@+id/author"/>

	<TextView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="@string/poem_link"
		android:id="@+id/poemLink"
		android:textColorLink="#ff0a072c"
		android:textColor="#ff0a072c"
		android:textStyle="bold"
		android:layout_below="@id/content"
		android:layout_alignParentRight="true"
		/>
</RelativeLayout>